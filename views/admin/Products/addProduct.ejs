<!DOCTYPE html>
<html>

<%-include("../common/header.ejs")%>

    <body>
        <div class="wrapper">
            <%-include("../common/navbar.ejs")%>
            <%-include("../common/sidebar.ejs")%>

            <div class="content-wrapper">

                <div class="content-header">
                    <div class="container-fluid">

                        <div class="row mb-2 mt-5">
                            <div class="col-sm-6">
                                <h1 class="m-0 text-dark">
                                    <%=dashboardtitle%>
                                </h1>
                            </div>

                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                                    <li class="breadcrumb-item active">Dashboard</li>
                                    <li class="breadcrumb-item active"> Food Products </li>
                                </ol>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="row mb-2">

                    <% if (typeof error !== 'undefined' && error.length > 0) {%> 
                        <div class="alert alert-danger">
                            <%= error %>
                        </div>
                    <% } %>

                    <div class="container mt-5 pb-5">
                        <h1 class="text-center mb-4"> Add New Food Product </h1>

                        <% if (message.length > 0) {%> 
                            <div class="alert alert-primary">
                              <%= message %>
                            </div>
                        <% } %>

                        <!-- productTitle
                            productDescription
                            productPrice
                            productRating
                            productKiloCalories
                            productDeliveryTime
                            image_product -->

                        <form action="/admin/createProduct" method="POST" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="inputState">Category</label>
                                <select id="inputState" class="form-control" name="category">
                                    <option disabled selected>Select Food Category</option>
                                    <% for(let data of foodCategory){ %>
                                        <option value="<%= data.id %>"> 
                                            <%= data.categoryName %>
                                        </option>
                                    <% } %>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="exampleFormControlInput1" class="form-label">Dish Name</label>
                                <input type="text" class="form-control" placeholder="Enter dish title" name="productTitle" required>
                            </div>
                            <div class="mb-3">
                                <label for="exampleFormControlInput1" class="form-label">Description</label>
                                <textarea placeholder="Enter description" name="productDescription" required></textarea>
                            </div>

                            <div class="form-group row pt-3">
                                <div class="col">
                                    <label for="productPrice" class="form-label">Price</label>
                                    <input type="text" class="form-control" placeholder="Enter price" id="productPrice" name="productPrice" required>
                                </div>
                                <div class="col">
                                    <label for="productRating" class="form-label">Rate</label>
                                    <input type="text" class="form-control" placeholder="Enter rate" id="productRating" name="productRating" required>
                                </div>
                                <div class="col">
                                    <label for="productKiloCalories" class="form-label">Calorie count</label>
                                    <input type="text" class="form-control" placeholder="Enter # of calories per dish" id="productKiloCalories" name="productKiloCalories" required>
                                </div>
                                <div class="col">
                                    <label for="productDeliveryTime" class="form-label">Delivery countdown</label>
                                    <input type="text" class="form-control" placeholder="Enter delivery time in minutes" id="productDeliveryTime" name="productDeliveryTime" required>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="formFile" class="form-label">Choose Image</label>
                                <input class="form-control" type="file" id="formFile" name="image_product" required>
                            </div>
                            <button type="submit" class="btn btn-success mt-5">Submit</button>
                        </form>
                    </div>
                </div>

            </div>
            <%-include("../common/footer.ejs")%>
            <script src="https://cdn.ckeditor.com/4.16.2/standard/ckeditor.js"></script>
            <script>
                CKEDITOR.replace('productDescription')
            </script>
        </div>
        <%-include("../common/scripts.ejs")%>
    </body>

</html>
<!DOCTYPE html>
<html>

<%-include("../common/header.ejs")%>

<body>
    <div class="wrapper">
        <%-include("../common/navbar.ejs")%>
        <%-include("../common/sidebar.ejs")%>

        <div class="content-wrapper">

            <div class="content-header">
                <div class="container-fluid">

                    <div class="row mb-2 mt-5">
                        <div class="col-sm-6">
                            <h1 class="m-0 text-dark">
                                <%=dashboardtitle%>
                            </h1>
                        </div>

                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                                <li class="breadcrumb-item active">Dashboard</li>
                                <li class="breadcrumb-item active"> Edit Comment </li>
                            </ol>
                        </div>
                    </div>

                </div>
            </div>

            <div class="row mb-2">

                <% if (typeof error !== 'undefined' && error.length > 0) {%>
                <div class="alert alert-danger">
                    <%= error %>
                </div>
                <% } %>

                <div class="container mt-5 pb-5">
                    <h1 class="text-center mb-4"> Edit Comment </h1>

                    <% if (message.length > 0) {%>
                    <div class="alert alert-primary">
                        <%= message %>
                    </div>
                    <% } %>

                    <form action="/admin/comment/<%= comment._id %>" method="POST">
                        <div class="form-group">
                            <label for="inputState">Product</label>
                            <select id="inputState" class="form-control" name="product">
                                <option disabled selected>Select Product</option>
                                <% if (comment.product) { %>
                                    <option value="<%= comment.product._id %>" selected> <%= comment.product.productTitle %> </option>
                                <% } %>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="inputState">User</label>
                            <select id="inputState" class="form-control" name="user">
                                <option disabled selected>Select User</option>
                                <% if (comment.user) { %>
                                    <option value="<%= comment.user._id %>" selected> <%= comment.user.first_name %> <%= comment.user.last_name %> </option>
                                <% } %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="exampleFormControlInput1" class="form-label">Comment</label>
                            <textarea name="comment" style="height: 200px; width: 100%; resize: none; padding: 8px; border-radius: 12px;" required><%= comment.comment %></textarea>
                        </div>
                        <button type="submit" class="btn btn-success mt-5">Submit</button>

                    </form>
                </div>
            </div>

        </div>
        <%-include("../common/footer.ejs")%>
    </div>
    <%-include("../common/scripts.ejs")%>
</body>

</html>
